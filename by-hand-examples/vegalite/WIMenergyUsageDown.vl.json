{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "example-data/real/world-indicators.json"
  },
  "description": "Energy Usage Down?",
  "mark": "line",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "timeUnit": "year",
      "axis": {
        "title": "Year"
      }
    },
    "y": {
      "field": "Energy Usage",
      "type": "quantitative",
      "aggregate": "sum",
      "axis": {
        "format": "~s"
      }
    }
  }
}