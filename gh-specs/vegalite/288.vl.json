{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "sp500.csv"
  },
  "vconcat": [
    {
      "width": 360,
      "mark": "area",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "scale": {
            "domain": {
              "selection": "brush"
            }
          }
        },
        "y": {
          "field": "price",
          "type": "quantitative"
        }
      }
    },
    {
      "width": 360,
      "height": 60,
      "mark": "area",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "price",
          "type": "quantitative"
        }
      },
      "selection": {
        "brush": {
          "type": "interval",
          "encodings": [
            "x"
          ]
        }
      }
    }
  ]
}