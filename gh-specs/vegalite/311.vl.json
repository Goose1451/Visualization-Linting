{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "https://api.insa.gov.br/reservatorios/12172/monitoramento",
    "format": {
      "type": "json",
      "property": "volumes",
      "parse": {
        "DataInformacao": "utc:'%d/%m/%Y'"
      }
    }
  },
  "vconcat": [
    {
      "width": 1880,
      "mark": "line",
      "encoding": {
        "x": {
          "field": "DataInformacao",
          "type": "temporal",
          "scale": {
            "domain": {
              "selection": "brush"
            }
          },
          "axis": {
            "title": "Datas (1990 - 2017)"
          }
        },
        "y": {
          "field": "Volume",
          "type": "quantitative"
        }
      }
    },
    {
      "width": 1880,
      "height": 80,
      "mark": "area",
      "selection": {
        "brush": {
          "type": "interval",
          "encodings": [
            "x"
          ]
        }
      },
      "encoding": {
        "x": {
          "field": "DataInformacao",
          "type": "temporal",
          "axis": {
            "format": "%Y",
            "title": "Anos (1990 - 2017)"
          }
        },
        "y": {
          "field": "VolumePercentual",
          "type": "quantitative",
          "axis": {
            "tickCount": 5,
            "grid": false
          }
        }
      }
    }
  ]
}