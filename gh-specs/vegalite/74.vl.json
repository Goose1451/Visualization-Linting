{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "title": "Current vs Target",
  "width": 500,
  "height": 300,
  "data": {
    "values": [
      {
        "current": 1500,
        "target": 100,
        "date": "1-Jan"
      },
      {
        "current": 1000,
        "target": 500,
        "date": "2-Feb"
      },
      {
        "current": 300,
        "target": 1500,
        "date": "3-Mar"
      },
      {
        "current": 500,
        "target": 1000,
        "date": "4-Apr"
