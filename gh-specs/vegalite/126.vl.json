{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "iris.csv"
  },
  "repeat": {
    "row": [
      "sepal length",
      "sepal width",
      "petal length",
      "petal width"
    ],
    "column": [
      "petal width",
      "petal length",
      "sepal width",
      "sepal length"
    ]
  },
  "spec": {
    "width": 150,
    "height": 150,
    "layer": [
      {
        "selection": {
          "brush": {
            "type": "interval",
            "resolve": "global"
          }
        },
        "mark": "circle",
        "encoding": {
          "x": {
            "field": {
              "repeat": "column"
            },
            "type": "quantitative",
            "scale": {
              "zero": false
            }
          },
          "y": {
            "field": {
              "repeat": "row"
            },
            "type": "quantitative",
            "scale": {
              "zero": false
            }
          },
          "color": {
            "condition": {
              "selection": "brush",
              "field": "species",
              "type": "nominal",
              "scale": {
                "scheme": "category10"
              }
            },
            "value": "grey"
          }
        }
      }
    ]
  }
}