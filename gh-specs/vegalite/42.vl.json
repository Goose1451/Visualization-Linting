{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "https://api.insa.gov.br/reservatorios/12172/monitoramento",
    "format": {
      "type": "json",
      "property": "volumes",
      "parse": {
        "DataInformacao": "utc:'%d/%m/%Y'"
      }
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "DataInformacao",
          "type": "temporal",
          "axis": {
            "title": "Ano"
          }
        },
        "y": {
          "aggregate": "mean",
          "field": "VolumePercentual",
          "type": "quantitative",
          "axis": {
            "title": "MÃ©dia"
          }
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "VolumePercentual",
          "type": "quantitative"
        },
        "color": {
          "value": "red"
        },
        "size": {
          "value": 2
        }
      }
    }
  ]
}