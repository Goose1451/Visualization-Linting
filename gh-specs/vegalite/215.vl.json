{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "data/cars.json",
    "format": {
      "type": "json"
    }
  },
  "selection": {
    "click": {
      "type": "single",
      "on": "click"
    },
    "metrics": {
      "type": "single",
      "bind": {
        "input": "text",
        "externalref": "click"
      }
    }
  },
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "Origin",
      "type": "ordinal"
    },
    "x": {
      "field": "Cylinders",
      "type": "ordinal"
    },
    "color": {
      "condition": {
        "selection": "pts",
        "aggregate": "count",
        "field": "*",
        "type": "quantitative"
      },
      "value": "grey"
    }
  }
}