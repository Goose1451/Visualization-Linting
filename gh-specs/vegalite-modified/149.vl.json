{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "height": 300,
  "width": 700,
  "title": "Gapminder regions",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "./gh-specs/data/149.vl.json",
    "format": {
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.iso_a3",
      "from": {
        "data": {
          "url": "gapminder.csv"
        },
        "key": "iso_a3",
        "fields": [
          "country",
          "region"
        ]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "#757575",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "region",
      "type": "nominal",
      "scale": {
        "range": [
          "#FFE700",
          "#77DFF7",
          "#7FEB00",
          "#FF5872"
        ]
      },
      "legend": false
    },
    "tooltip": [
      {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "region",
        "type": "nominal",
        "title": "Region"
      }
    ]
  }
}